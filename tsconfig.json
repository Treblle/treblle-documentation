{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@treblle/typescript-config/next-js",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "~styled-system/*": ["./styled-system/*"],
            "~components/*": ["./components/*"],
            "~data/*": ["./data/*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}